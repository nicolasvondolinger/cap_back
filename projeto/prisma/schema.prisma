datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          Int @id @default(autoincrement())
  email       String  @unique
  name        String
  password    String
  photo       String?
  role        String
  listenedMusics Music[] 
}

model Artist{
  id Int @id @default(autoincrement())
  name String
  photo String?
  streams Int @default(0)

  songs Music[]
}

model Music{
  id Int @id @default(autoincrement())
  name String
  gender String
  album String
  artistId Int
  artist Artist @relation(fields: [artistId], references: [id])
  listeners User[] 
}

